<%= form_with(model: @message, local: true) do |f|%>
    <%= render 'shared/error_messages' %>
          
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form field_with_errors' %>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form field_with_errors' %>

    <%= f.label :video %>
    <span class="image">
        <%= f.file_field :video %>
    </span>
    <%= f.label :thumbnail %>
    <span class="image">
        <%= f.file_field :thumbnail %>
    </span>

    <%= f.submit yield(:button_text), class:"btn btn-secondary"%>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
<% end %>