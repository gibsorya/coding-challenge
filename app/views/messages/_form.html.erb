<%= form_with(model: @message, local: true) do |f|%>
    <%= render 'shared/error_messages' %>
          
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form field_with_errors' %>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form field_with_errors' %>

    <%= f.submit yield(:button_text), class:"btn btn-primary"%>
<% end %>